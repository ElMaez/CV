---
import "../pages/css/animation.css";
---

<header>
  <nav>
    <ul>
      <li><a class="menuBtn" href="#">Home</a></li>
      <li><a class="menuBtn" href="#">Home</a></li>
      <li><a class="menuBtn" href="#">Home</a></li>
      <li><a class="menuBtn" href="#">Home</a></li>
    </ul>
  </nav>
</header>

<style>
  header {
    background-image: linear-gradient(
        260deg,
        rgb(0, 0, 0) 0%,
        rgba(0, 0, 0, 0.4) 35%,
        rgba(0, 0, 0, 0) 100%
      ),
      url(/src/assets/img/DSC08462Flip.png);
    background-repeat: no-repeat;
    background-position: 30% 18%;

    border-radius: 1rem;
    border: solid 0.4rem rgb(15, 15, 15);

    height: 30rem;
  }
  nav {
    height: 100%;
    padding: 5rem 2rem;
  }
  nav ul {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: 1fr;
    row-gap: 0.5rem;
  }
  li {
    grid-column: 2/-1;

    display: flex;
    flex-direction: column;
    overflow: hidden;

    width: 100%;
    height: 2.5rem;
  }
  li a {
    text-align: end;
  }
</style>

<script>
  let menuBnt = document.querySelectorAll("li");
  menuBnt.forEach((Bnt) => {
    Bnt.addEventListener("mouseenter", () => {
      Bnt.innerHTML += `<div id="line" class="aHover"></div>`;
    });
    Bnt.addEventListener("mouseleave", () => {
      let divn = document.getElementById("line") as HTMLElement;
      Bnt.removeChild(divn);
    });
    Bnt.addEventListener("click", () => {
      let divn = document.getElementById("line") as HTMLElement;
      Bnt.removeChild(divn);
    });
  });
</script>
